# ========================================
# 智谱 AI API 配置（推荐，GLM-4-Flash 完全免费）
# ========================================
# 申请地址：https://open.bigmodel.cn/
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions
ZHIPU_MODEL=glm-4-flash

# ========================================
# 通义千问 API 配置
# ========================================
# 申请地址：https://dashscope.aliyuncs.com/
QWEN_API_KEY=your_qwen_api_key_here
QWEN_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1/chat/completions
QWEN_MODEL=qwen-plus

# ========================================
# DeepSeek API 配置
# ========================================
# 申请地址：https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
DEEPSEEK_MODEL=deepseek-chat

# ========================================
# LLM 提供商选择
# ========================================
# 可选值: zhipu, deepseek, qwen
LLM_PROVIDER=zhipu

# ========================================
# Embedding 配置
# ========================================
EMBEDDING_API_KEY=your_zhipu_api_key_here
EMBEDDING_API_URL=https://open.bigmodel.cn/api/paas/v4/embeddings
EMBEDDING_MODEL=embedding-2
USE_LOCAL_EMBEDDING=false
EMBEDDING_DIM=1024
EMBEDDING_LOCAL_URL=http://localhost:5001/embed

# ========================================
# RAG 模式配置
# ========================================
# true: 使用向量检索 + LLM
# false: 使用传统关键词匹配 + 规则引擎
USE_RAG=true

# ========================================
# Agent 模式配置
# ========================================
# true: 启用 Agent 功能（工具调用 + 任务规划）
# false: 禁用 Agent 功能
ENABLE_AGENT=true

# ========================================
# Agent 模式选择
# ========================================
# auto: Agent 内部根据意图自动选择工具或 RAG
# agent: 强制使用 Agent 模式
# rag: 强制使用 RAG 模式
AGENT_MODE=auto

# ========================================
# Redis 配置（可选）
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# 服务器配置
# ========================================
PORT=3001
NODE_ENV=development
